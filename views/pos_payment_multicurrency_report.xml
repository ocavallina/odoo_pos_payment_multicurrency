<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_payment_multicurrency_list" model="ir.ui.view">
        <field name="name">pos.payment.multicurrency.list</field>
        <field name="model">pos.payment</field>
        <field name="arch" type="xml">
            <list string="Multi-Currency Payments" create="false" edit="false">
                <field name="payment_date"/>
                <field name="session_id"/>
                <field name="payment_method_id"/>
                <field name="amount" sum="Total Base"/>
                <field name="payment_currency_id"/>
                <field name="payment_amount_currency" sum="Total Foreign"/>
                <field name="payment_exchange_rate"/>
            </list>
        </field>
    </record>

    <record id="action_pos_payment_multicurrency_report" model="ir.actions.act_window">
        <field name="name">Multi-Currency Payments</field>
        <field name="res_model">pos.payment</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_pos_payment_multicurrency_list"/>
        <field name="domain">[('payment_currency_id', '!=', False)]</field>
    </record>

    <menuitem 
        id="menu_pos_multicurrency_payments"
        name="Multi-Currency Payments" 
        parent="point_of_sale.menu_point_of_sale"
        action="action_pos_payment_multicurrency_report"/>
</odoo>